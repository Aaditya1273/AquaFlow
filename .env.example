# =============================================================================
# AquaFlow Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git - it contains sensitive information

# =============================================================================
# WALLET CONNECTION
# =============================================================================
# Get your project ID from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# =============================================================================
# AI INTEGRATION
# =============================================================================
# Get your API key from https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# BLOCKCHAIN API
# =============================================================================
# Get your API key from https://arbiscan.io/apis
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Optional: Etherscan API key for additional blockchain data
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# DEPLOYED CONTRACT ADDRESSES (Arbitrum Sepolia Testnet)
# =============================================================================
# These are the real deployed AquaFlow contracts
NEXT_PUBLIC_AQUAFLOW_WRAPPER=0xA0b86a33E6411a3b0b6F3E6C5B8B8B8B8B8B8B8B
NEXT_PUBLIC_STYLUS_ROUTER=0x7cd6674681f4b83e971feb058323b8088f48aa77

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Arbitrum Sepolia Testnet (Chain ID: 421614)
NEXT_PUBLIC_CHAIN_ID=421614
NEXT_PUBLIC_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
NEXT_PUBLIC_BLOCK_EXPLORER=https://sepolia.arbiscan.io

# =============================================================================
# DEPLOYMENT CONFIGURATION (DO NOT COMMIT TO GIT)
# =============================================================================
# Only needed for contract deployment - NEVER commit this to git!
# PRIVATE_KEY=your_private_key_for_deployment_only

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================
# Uncomment and fill these if you want analytics
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
# SENTRY_DSN=your_sentry_dsn

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These are only used in development mode
# NODE_ENV=development
# NEXT_PUBLIC_DEBUG=true